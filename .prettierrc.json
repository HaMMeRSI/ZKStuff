{
	"semi": true,
	"trailingComma": "es5",
	"singleQuote": true,
	"printWidth": 160,
	"useTabs": true,
	"bracketSpacing": true,
	"tabWidth": 4,
	"arrowParens": "avoid",
	"endOfLine": "auto",
	"bracketSameLine": true,
	"importOrder": ["^@/(.*)$", "^[./]"],
	"importOrderSeparation": true,
	"overrides": [
		{
			"files": "*.yml",
			"options": {
				"tabWidth": 4
			}
		}
	]
}
